<%= form_tag controller: "messages", action: "create", method: "post" do %>
  <div class="form-group">
    <%= label_tag :phone_number %>
    <%= text_field_tag :phone_number, "", class: "form-control"%>
  </div>
  <div class="form-group">
    <%= label_tag :message %>
    <%= text_field_tag :message, "", class: "form-control"%>
  </div>
  <div class="form-group">
    <%= submit_tag "Send Message", class: "btn btn-block btn-success" %>
  </div>
<% end %>

<%= form_tag controller: "calls", action: "create", method: "post" do %>
  <div class="form-group">
    <%= label_tag :phone_number %>
    <%= text_field_tag :phone_number, "", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= submit_tag "Make Call", class: "btn btn-block btn-success" %>
  </div>
<% end %>
